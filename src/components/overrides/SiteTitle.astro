---
const { siteTitle, siteTitleHref } = Astro.locals.starlightRoute;
---

<a href={siteTitleHref} class="site-title sl-flex">
  <img
    class="light:sl-hidden print:hidden"
    alt="MineColab Logo (Light)"
    src="/assets/brand/minecolab_mark_light.svg"
  />
  <img
    class="dark:sl-hidden print:block"
    alt="MineColab Logo (Dark)"
    src="/assets/brand/minecolab_mark_dark.svg"
  />
  <span class="sr-only notranslate" translate="no">{siteTitle}</span>
</a>

<style>
  .site-title {
    align-items: center;
    gap: var(--sl-nav-gap);
    font-size: var(--sl-text-h4);
    font-weight: 600;
    color: var(--sl-color-text-accent);
    text-decoration: none;
    white-space: nowrap;
  }
  img {
    height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y));
    width: auto;
    max-width: 100%;
    object-fit: contain;
    object-position: 0 50%;
  }
</style>
